function hiroc2018_preprocess_field(&$variables, $hook) {
  $element = $variables['element'];
  if ($element['#field_name'] == 'field_learn_more') {
    $variables['items'][0]['content']['#options']['attributes']['class'][] = 'btn btn-light';
  }
}
